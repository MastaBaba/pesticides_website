{
  "name": "@severo/pesticides_website",
  "version": "1.0.0",
  "description": "Data visualization on pesticides in drinking water in Brazil",
  "directories": {
    "lib": "docs"
  },
  "scripts": {
    "css-deploy": "npm run css-build && npm run css-postcss",
    "css-build": "node-sass src/_sass/main.scss docs/css/main.css",
    "css-postcss": "postcss --use autoprefixer --output docs/css/main.css docs/css/main.css",
    "css-watch": "npm run css-build -- --watch",
    "deploy": "npm test && npm run css-deploy && npm run js-build && npm run mustache-build",
    "fix:other": "prettier --write \"**/*.{json,md,scss,yaml,yml}\"",
    "fix:js": "npm run test:js --fix",
    "fix": "npm run fix:js && npm run fix:other",
    "js-build": "rollup -c",
    "js-watch": "npm run js-build -- --watch",
    "mustache-build-en": "mustache src/lang/en.json src/index.mustache.html > docs/index.html",
    "mustache-build-pt": "mustache src/lang/pt.json src/index.mustache.html > docs/index.pt.html",
    "mustache-build": "npm run mustache-build-en && npm run mustache-build-pt",
    "start": "npm-run-all --parallel css-watch js-watch",
    "test:other": "prettier --list-different \"**/*.{json,md,scss,yaml,yml}\"",
    "test:js": "eslint --ignore-path .gitignore --ignore-path .prettierignore \"**/*.js\"",
    "test": "npm run test:other && npm run test:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/severo/pesticides_website.git"
  },
  "author": "Sylvain Lesage <severo@rednegra.net>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/severo/pesticides_website/issues"
  },
  "homepage": "https://github.com/severo/pesticides_website#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "autoprefixer": "^9.4.7",
    "bulma": "^0.7.4",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "mustache": "^3.0.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.1",
    "prettier": "^1.16.4",
    "rollup": "^1.2.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  }
}
