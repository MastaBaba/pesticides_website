{
  "name": "@severo/pesticides_website",
  "version": "1.0.0",
  "description": "Data visualization on pesticides in drinking water in Brazil",
  "directories": {
    "lib": "docs"
  },
  "scripts": {
    "css-deploy": "npm run css-build && npm run css-postcss",
    "css-build": "node-sass src/_sass/main.scss docs/css/main.css",
    "css-postcss": "postcss --use autoprefixer --output docs/css/main.css docs/css/main.css",
    "css-watch": "npm run css-build -- --watch",
    "deploy": "npm run css-deploy && npm run js-build && npm run mustache-build",
    "fix:other": "npm run prettier --write",
    "fix:js": "npm run test:js --fix",
    "fix": "npm run fix:js && npm run fix:other",
    "js-build": "babel src/_javascript --out-dir docs/lib",
    "js-watch": "npm run js-build -- --watch",
    "mustache-build": "mustache src/lang/en.json src/index.mustache.html > docs/index.html; mustache src/lang/pt.json src/index.mustache.html > docs/index.pt.html;",
    "prettier": "prettier \"**/*.{json,md,scss,yaml,yml}\"",
    "start": "npm-run-all --parallel css-watch js-watch",
    "test:other": "npm run prettier --list-different",
    "test:js": "eslint --ignore-path .gitignore --ignore-path .prettierignore \"**/*.{js,jsx}\"",
    "test": "npm run test:other && npm run test:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/severo/pesticides_website.git"
  },
  "author": "Sylvain Lesage <severo@rednegra.net>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/severo/pesticides_website/issues"
  },
  "homepage": "https://github.com/severo/pesticides_website#readme",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.4.7",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015-ie": "^6.7.0",
    "bulma": "^0.7.4",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "mustache": "^3.0.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.1",
    "prettier": "^1.16.4"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,scss,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
